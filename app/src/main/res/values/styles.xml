<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:colorBackground">#FFF</item>
    </style>

    <style name="unit_detail_caption">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <style name="unit_misc_info_caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#AAA</item>
        <item name="android:gravity">right</item>
        <item name="android:lineSpacingMultiplier">1.2</item>

    </style>

    <style name="unit_misc_info_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="unit_getway_caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#354B63</item>
    </style>

    <style name="unit_getway_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5A7797</item>
        <item name="android:paddingLeft">12dp</item>
    </style>
</resources>
