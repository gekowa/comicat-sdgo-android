<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weapon_caption_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#005BB6"/>

            <TextView
                android:id="@+id/weapon_property_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#40C45E" />

            <TextView
                android:id="@+id/weapon_effect_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAB54" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weapon_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weapon_range_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F00"/>
        </LinearLayout>

        <TextView
            android:id="@+id/weapon_ex_line1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#02A49C"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/weapon_ex_line2_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#02A49C"
            android:textSize="12dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/weapon_image_view"
        android:layout_width="84dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:scaleType="fitXY"></ImageView>
</merge>