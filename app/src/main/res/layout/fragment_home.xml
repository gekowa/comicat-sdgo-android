<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.sdgundam.comicatsdgo.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/carousel"
            android:name="cn.sdgundam.comicatsdgo.CarouselFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
         />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latest_units_caption"
            android:background="#cccccc"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

        <it.sephiroth.android.library.widget.AbsHListView
            android:id="@+id/unit_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>
